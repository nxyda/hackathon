<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Lewa część - scena z postacią i dymkami -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/human"
            android:layout_width="552dp"
            android:layout_height="412dp"
            android:src="@drawable/male_happy"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/choice1_image"
            android:layout_width="426dp"
            android:layout_height="259dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/dymek" />

        <ImageView
            android:id="@+id/choice2_image"
            android:layout_width="426dp"
            android:layout_height="259dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/dymek" />

        <ImageView
            android:id="@+id/choice3_image"
            android:layout_width="426dp"
            android:layout_height="259dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="210dp"
            android:src="@drawable/dymek" />

        <Button
            android:id="@+id/choice1"
            android:layout_width="128dp"
            android:layout_height="78dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="84dp"
            android:background="@android:color/transparent"
            android:contentDescription="Transparent button"
            android:text=""
            android:textColor="#000"
            />

        <Button
            android:id="@+id/choice2"
            android:layout_width="128dp"
            android:layout_height="78dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="184dp"
            android:background="@android:color/transparent"
            android:contentDescription="Transparent button"
            android:text=""
            android:textColor="#000" />

        <Button
            android:id="@+id/choice3"
            android:layout_width="128dp"
            android:layout_height="78dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="290dp"
            android:background="@android:color/transparent"
            android:contentDescription="Transparent button"
            android:text=""
            android:textColor="#000"/>
    </FrameLayout>

    <!-- Prawa część - scrollowany panel -->
    <ScrollView
        android:id="@+id/rightPanel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/konwersacjaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konwersacja"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/konwersacja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="ddd"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>